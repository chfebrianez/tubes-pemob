<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_namaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Mie Aceh"
            android:textColor='#000000'
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_gambarMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_namaMakanan"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/makanan" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_gambarMakanan"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:text="Bahan-bahan"
                    android:textColor='#000000'
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bahanMakanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Lengkuas\n- dan lain"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:id="@+id/tv_bumbuHalusbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:text="Bumbu Halus"
                    android:textColor='#000000'
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_bumbuHalus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Lengkuas\n- dan lain"
                    android:layout_marginLeft="40dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_toppingMakananbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:text="Bahan Topping"
                    android:textColor='#000000'
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_toppingMakanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Lengkuas\n- dan lain"
                    android:layout_marginLeft="40dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_caraMembuatbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:text="Cara Membuat"
                    android:textColor='#000000'
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_caraMembuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Lengkuas\n- dan lain"
                    android:layout_marginLeft="40dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="140dp"
        android:layout_height="161dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>